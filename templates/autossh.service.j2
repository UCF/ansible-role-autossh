[Unit]
Description=AutoSSH service to tunnel port {{ autossh_local_port }} to {{ autossh_dest_port }} on {{ autossh_dest_server }}
Wants=network-online.target
After=network-online.target

[Service]
ExecStart={{ autossh_path }} -M 0 -N -q -o "ServerAliveInterval 60" -o "ServerAliveCountMax 3" -L {{ autossh_local_port }}:{{ autossh_dest_server }}:{{ autossh_dest_port }} -i {{ autossh_ssh_dir }}/{{ autossh_ssh_keys.private.filename }} {{ autossh_ssh_user }}@{{ autossh_ssh_server }}
Restart=always
RestartSec=5

[Install]
WantedBy=multi-user.target