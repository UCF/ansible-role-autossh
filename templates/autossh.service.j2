[Unit]
Description=AutoSSH service for "{{ item.id }}" to tunnel port "{{ item.forwarding_port }}" to "{{ item.dest_port }}" on "{{ item.server }}"".
Wants=network-online.target
After=network-online.target

[Service]
ExecStart={{ autossh_path }} -M 0 -N -q -o "ServerAliveInterval 60" -o "ServerAliveCountMax 3" \
{{ item.forwarding_mode|default('-L') }} {{ item.bind_address | default(autossh_default_bind_address) }}:{{ item.forwarding_port | default(item.local_port) }}:{{ item.dest_server | default(autossh_default_dest_server) }}:{{ item.dest_port }} \
-i {{ item.identity_file | default(autossh_default_identity_file) }} \
{{ item.user }}@{{ item.server }}
Restart=always
RestartSec=5

[Install]
WantedBy=multi-user.target
